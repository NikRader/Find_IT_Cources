<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.RegistrationAndEnterScreenActivity">

    <TextView
        android:id="@+id/Registration_tv"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/Top_margin"
        android:text="@string/registration"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintStart_toStartOf="@+id/registration_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registration_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/TOP_MARGIN"
        android:backgroundTint="@color/green"
        android:text="@string/registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action" />


    <LinearLayout
        android:id="@+id/inputs"
        android:layout_width="333dp"
        android:layout_height="140dp"
        android:layout_marginTop="28dp"
        android:background="@color/grey"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Registration_tv" >
        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repeat_password_layout"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/action"
        android:layout_width="324dp"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputs" />

    <View
        android:id="@+id/divider"
        android:layout_height="@dimen/line_height"
        android:layout_width="@dimen/btn_width"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_btn"/>

    <LinearLayout
        android:id="@+id/social_media"

        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" >

        <Button
            android:id="@+id/vk_button"
            android:layout_margin="5dp"
            android:backgroundTint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/vk" />

        <Button
            android:id="@+id/odnoklassniki_btn"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>